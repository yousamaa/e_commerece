<h1>Products#show</h1>
<p>Find me in app/views/products/show.html.erb</p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><strong><%= @product.name %></strong></h3>
  </div>
  <div class="panel-body">
    <strong>Price: </strong>
    <%= number_to_currency(@product.price) %>
      <br><br>
      <div class="row">
        <% (0...@product.images.count).each do |image| %>
          <div class="col-xs-6 col-md-3">
            <div class="thumbnail">
              <%= image_tag(@product.images[image]) %>
            </div>
          </div>
        <% end %>
      </div>
      <div>
        <%= render partial:'comments/index', locals: {comments: @comments} %>
      </div>
      <div>
        <%= render partial:'comments/new', locals: {comment: @comment} %>
      </div>
  </div>
</div>